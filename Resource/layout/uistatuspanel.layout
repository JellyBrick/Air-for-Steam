"resource/layout/uistatuspanel.layout" {	
	styles {
		StatusLabel {
			textcolor=A2TextPrimary
			font-family=basefont
			font-size=18
			font-size=19 [$OSX]
			font-style=normal
			inset-top=-2
		}
		
		StatusLabelDim {
			textcolor=A2TextPrimary
			font-family=basefont
			font-size=16
			font-size=17 [$OSX]
			font-style=normal
		}
		
		SlimProgressBar {
			bgcolor=none
			render_bg {
				0="fill(x0 + 1, y0, x1 - 1, y1, A2Bar)"
			}
			render { }
		}
		
		Panel {
			bgcolor=Focus
		}
	}
	
	layout {
		region {
			name=statusregion
			x=12
			y=0
			width=max
			height=max
		}
		
		place {
			control=StatusDownloading,StatusPaused,StatusComplete
			region=statusregion
			align=left
			dir=right
			height=max
			margin-top=0
		}
		
		place {
			control=StatusProgressbar
			region=statusregion
			align=bottom
			width=300
			height=4
		}
	}
}